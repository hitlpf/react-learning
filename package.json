{
    "name": "react-ssr-music",
    "version": "1.0.0",
    "description": "使用react+koa的音乐同构项目",
    "main": "main.js",
    "scripts": {
        "start": "webpack-dev-server --hot --config build/webpack.dev.config.js",
        "server": "node server/index.js",
        "client:dev": "webpack --config ./build/webpack.dev.config.js --watch",
        "client:build": "webpack --config ./build/webpack.prod.config.js --watch",
        "lint": "./node_modules/.bin/eslint src/**/*.js",
        "fix": "prettier --write src/**/*.js"
    },
    "lint-staged": {
        "src/**/*.js": [
            "./node_modules/.bin/eslint .js",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "validate-commit-msg"
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "proseWrap": "always"
    },
    "devDependencies": {
        "@babel/cli": "^7.12.10",
        "@babel/core": "^7.12.10",
        "@babel/plugin-proposal-class-properties": "^7.12.13",
        "@babel/plugin-transform-runtime": "^7.12.10",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "assets-webpack-plugin": "^7.0.0",
        "babel-eslint": "^10.1.0",
        "babel-loader": "^8.2.2",
        "css-loader": "^5.0.1",
        "eslint": "^7.20.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^7.2.0",
        "eslint-config-react-app": "^6.0.0",
        "eslint-plugin-flowtype": "^5.2.2",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "file-loader": "^6.2.0",
        "html-loader": "^1.3.2",
        "html-webpack-plugin": "^4.5.1",
        "husky": "^5.0.9",
        "less": "^4.1.0",
        "less-loader": "^7.3.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "style-loader": "^2.0.0",
        "terser-webpack-plugin": "^1.4.3",
        "url-loader": "^4.1.1",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.2",
        "webpack-merge": "^5.7.3"
    },
    "dependencies": {
        "@babel/register": "^7.12.10",
        "animate.css": "^4.1.1",
        "antd": "^4.12.2",
        "font-awesome": "^4.7.0",
        "koa": "^2.13.1",
        "koa-router": "^10.0.0",
        "koa-static": "^5.0.0",
        "koa-views": "^7.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0"
    }
}
